<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <ImageButton
        android:id="@+id/startButton"
        android:layout_width="81dp"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="165dp"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="643dp"
        android:layout_marginEnd="164dp"
        android:layout_marginRight="164dp"
        android:layout_marginBottom="21dp"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/open"
        android:onClick="onClickPlay"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/Open"

    tools:ignore="VectorDrawableCompat" />



    <ImageButton
        android:id="@+id/stopCameraButton"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="168dp"
        android:layout_marginLeft="168dp"
        android:layout_marginTop="643dp"
        android:layout_marginEnd="166dp"
        android:layout_marginRight="166dp"
        android:layout_marginBottom="39dp"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/open"
        android:onClick="onClickStopCamera"
        android:scaleType="fitXY"
        android:visibility="gone"
        app:srcCompat="@drawable/Stop"
        tools:ignore="VectorDrawableCompat" />

    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="oval">

    <gradient
        android:angle="270"
        android:endColor="#80FF00FF"
        android:startColor="#FFFF0000" />

    <ImageButton
        android:id="@+id/exitButton"
        android:layout_width="36dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="369dp"
        android:layout_marginLeft="369dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="689dp"

        android:background="@drawable/circulic"
        android:onClick="onClickClose"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>


</RelativeLayout>